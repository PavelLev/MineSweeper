<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Game">
                <MenuItem Header="Options" Click="OptionsClick"/>
                <MenuItem Header="Restart" Click="RestartClick"/>
            </MenuItem>
        </Menu>
        <WrapPanel x:Name="MinesWrapPanel" HorizontalAlignment="Center" VerticalAlignment="Center">

        </WrapPanel>
    </DockPanel>
</Window>
